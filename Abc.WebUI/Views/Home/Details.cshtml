@using Abc.WebUI.Entity
@model Product
@{
    ViewBag.Title = "Details";
}

<div class="row">
    <div class="col-md-6">
        <img src="/theme/img/camera.jpg" class="img-fluid rounded">
    </div>

    <div class="col-md-6">
        <div class="row">
            <div class="col-md-12">
                <h1>@Model.Name</h1>
            </div>
        </div>
        <div class="row mt-3">
            <div class="col-md-12">
                <span class="badge badge-primary">In Stock </span>
                <span class="product-number">@Model.Stock</span>
            </div>
        </div>
        <div class="row mt-2">
            <div class="col-md-12">
                <div id="description">
                    @Model.Description
                </div>
            </div>
            <div class="col-md-12">
                <div class="row">
                    <div class="col-md-12">
                        <i class="fa fa-star"></i>
                        <i class="fa fa-star"></i>
                        <i class="fa fa-star"></i>
                        <i class="fa fa-star"></i>
                        <i class="fa fa-star-half-full"></i>
                        <span class="badge badge-success">53</span>
                    </div>
                    <div id="write-review" class="md-4">
                        <a href="#">
                            Write a review
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <div class="row mt-2">
            <div class="col-md-12">
                <h4 id="product-prices">@Model.Price</h4>
            </div>
        </div>
        <div class="row mt-2">
            <div class="col-md-12">
                <i class="fa fa-shopping-basket"></i>
                <button class="btn btn-success">Add To Cart</button>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <ul class="nav nav-tabs mb-3" id="pills-tab" role="tablist">
            <li class="nav-item" role="presentation">
                <button class="nav-link active" id="pills-description-tab" data-toggle="pill" data-target="#pills-home" type="button" role="tab" aria-controls="pills-description" aria-selected="true">Description</button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="pills-payment-tab" data-toggle="pill" data-target="#pills-payment" type="button" role="tab" aria-controls="pills-profile" aria-selected="false">Payment Methods</button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="pills-comment-tab" data-toggle="pill" data-target="#pills-comment" type="button" role="tab" aria-controls="pills-contact" aria-selected="false">Comment</button>
            </li>
        </ul>
        <div class="tab-content" id="pills-tabContent">
            <div class="tab-pane fade show active" id="pills-description" role="tabpanel" aria-labelledby="pills-description-tab">AÇIKLAMAAÇIKLAMAAÇIKLAMAAÇIKLAMAAÇIKLAMA</div>
            <div class="tab-pane fade" id="pills-payment" role="tabpanel" aria-labelledby="pills-payment-tab">ÖDEME ÖDEME ÖDEME ÖDEME ÖDEME ÖDEME ÖDEME ÖDEME ÖDEME </div>
            <div class="tab-pane fade" id="pills-comment" role="tabpanel" aria-labelledby="pills-comment-tab">YORUM YORUM YORUM YORUM YORUM YORUM YORUM YORUM YORUM </div>
        </div>
    </div>
</div>

